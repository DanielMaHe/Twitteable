<div id="<%= dom_id tweet %>">

  <%= link_to tweet_path(tweet) do %>
    <% if tweet.user.avatar.attached? %>
      <%= tweet.user.image_tag user.avatar %>
    <% else %>
      <%= image_tag "not_found.png", size: "100x100" %>
    <% end %>
    <%# <%= link_to "Show this tweet", tweet %>
    <span>
      <%# <%= link_to tweet.user.name, user_path %>
      <%= link_to tweet.user.name, user_path(tweet.user.username) %>
    </span>
    <%# <span><%= tweet.user.name %>
    <span>@<%= link_to tweet.user.username, user_path(tweet.user.username) %></span>
    <%# <span>@<%= tweet.user.username %>
    <span><%= time_ago_in_words(tweet.created_at).gsub("about", "")%> ago</span>
    <p><%= tweet.body %></p>
  <% end %>

  <div>
    <%= link_to tweet_path(tweet.replies) do %>
      <%= image_tag "coments.png" %>
      <%= tweet.replies_count %>
    <% end %>
    <%= link_to user_path(tweet.user) do %>
      <span><%= image_tag "likes.png" %><span><%= tweet.likes_count %></span></span>
    <% end %>
  </div>  

  <%# <p> %>
    <%# <strong>comments:</strong> %>
    <%# <%= tweet.replied_to_id %>
  <%# </p> %>
</div>
