
<div id="<%= dom_id tweet %>" class= "footer__content" >

  <%= link_to tweet_path(tweet) do %>
<section style="max-width: 250px">
    <figure >
      <% if tweet.user.avatar.attached? %>
        <%= image_tag tweet.user.avatar, size: "100x100" %>
      <% else %>
        <%= image_tag "not_found.png", size: "100x100" %>
      <% end %>
    </figure>

    <span>
      <%= link_to tweet.user.name, user_path(tweet.user.username), class: "text-decoration-none" %>
    </span>

    <span>@<%= link_to tweet.user.username, user_path(tweet.user.username), class: "text-decoration-none" %></span>
    <span><%= time_ago_in_words(tweet.created_at).gsub("about", "")%> ago</span>

    <p><%= link_to tweet.body,  tweet_path(tweet), class: "text-decoration-none " %></p>

  <% end %>

  <div>
    <%= link_to tweet_path(tweet) do %>
      <%= image_tag "coments.png" %>
      <%= tweet.replies_count %>
    <% end %>
    <%= link_to user_path(tweet.user) do %>
      <span><%= image_tag "likes.png" %><span><%= tweet.likes_count %></span></span>
    <% end %>
  </div>  
</section>


